{
    "root": true,
	"extends": [
		"plugin:@wordpress/eslint-plugin/recommended"
	],
    "env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"deezerWidgetBlockData": "readonly"
	},
    "rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"printWidth": 200,
				"semi": true,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
} 